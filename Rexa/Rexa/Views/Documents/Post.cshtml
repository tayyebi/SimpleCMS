@model Rexa.Models.v_Post
<h1 class="Title">@Model.Title</h1>
<h2 class="Username">@Model.AdminUsername</h2>
<h4 class="Date">@Model.Date</h4>
@if (Session["Username"] != null) { 
    <div class="Control">
        <a class="Delete" href="~/Post/Delete/@Model.Id">حذف</a>
        <a class="Update" href="~/Post/Update/@Model.Id">ویرایش</a>
    </div>
}
<div class="Body">@Html.Raw(Model.Body)</div>