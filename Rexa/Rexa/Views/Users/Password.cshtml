@model Rexa.Models.v_User
@{
    ViewBag.Title = "رمز";
}
<form method="post" enctype="application/x-www-form-urlencoded">

    <label for="prevPass">رمز قبلی</label>
    <input type="password" name="prevPass" />
 
    <label for="Password">رمز جدید</label>
    <input type="password" name="Password"  />

    <label for="Confirm">تکرار رمز جدیده</label>
    <input type="password" name="Confirm"  />

    <input type="submit" value="کار از محکم کاری عیب نمی‌کنه" />
    @Html.ActionLink("بیخیال", "Update", new { controller = "Users", id = Model.Username })
</form>
